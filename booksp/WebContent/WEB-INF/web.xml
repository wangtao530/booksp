<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>booksp</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<!-- 删除购物车中图书 -->
	<servlet>
		<servlet-name>delShoppingCart</servlet-name>
		<servlet-class>book.web.servlet.DelBookFromShoppingCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>delShoppingCart</servlet-name>
		<url-pattern>/delShoppingCart</url-pattern>
	</servlet-mapping>
	<!-- 向购物车中添加图书 -->
	<servlet>
		<servlet-name>shopping</servlet-name>
		<servlet-class>book.web.servlet.ShoppingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>shopping</servlet-name>
		<url-pattern>/shopping</url-pattern>
	</servlet-mapping>

	<!-- 查询图书 -->
	<servlet>
		<servlet-name>query</servlet-name>
		<servlet-class>book.web.servlet.QueryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>query</servlet-name>
		<url-pattern>/que</url-pattern>
	</servlet-mapping>
	<!-- 分页查询图书 -->
	<servlet>
		<servlet-name>pagequery</servlet-name>
		<servlet-class>book.web.servlet.PageQueryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>pagequery</servlet-name>
		<url-pattern>/pgQue</url-pattern>
	</servlet-mapping>
	<!-- 用户登陆 -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>book.web.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<!-- 用户注销 -->
	<servlet>
		<servlet-name>logOut</servlet-name>
		<servlet-class>book.web.servlet.LogOutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logOut</servlet-name>
		<url-pattern>/logOut</url-pattern>
	</servlet-mapping>
	<!-- 用户注册 -->
	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>book.web.servlet.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/regr</url-pattern>
	</servlet-mapping>
	<!-- 查看数据源 -->
	<servlet>
		<servlet-name>dss</servlet-name>
		<servlet-class>book.web.servlet.DataSourceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dss</servlet-name>
		<url-pattern>/dss</url-pattern>
	</servlet-mapping>
	<!-- 过滤器设置请求与响应编码方式 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>book.web.filter.CharacterEncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 使用ServletContextListener接口，在book系统服务启动时，加载DataSource对象，获取数据库连接 -->
	<!-- <listener> <listener-class>book.web.listener.DataSourceListener</listener-class> 
		</listener> -->
	<!-- 1对1统计在线人数 通过注解配置了 -->
	<!-- <listener> <listener-class>book.entity.UserInfo</listener-class> </listener> -->
	<description>MySQL Book</description>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/book</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<!-- <security-constraint> <web-resource-collection> <web-resource-name>my 
		booksp</web-resource-name> <url-pattern>/jsp/admin/*</url-pattern> </web-resource-collection> 
		<auth-constraint> <role-name>admin</role-name> </auth-constraint> </security-constraint> -->
	<!-- login-config只能出现一次 -->
	<!-- <login-config> <auth-method>DIGEST</auth-method> <realm-name>myrealm</realm-name> 
		</login-config> -->
	<!-- <login-config> <auth-method>FORM</auth-method> <realm-name>bookrealm</realm-name> 
		<form-login-config> <form-login-page>/jsp/admin/login.jsp</form-login-page> 
		<form-error-page>/jsp/admin/error.jsp</form-error-page> </form-login-config> 
		</login-config> -->
	<security-constraint>
		<!-- Authorization setting for SSL -->
		<web-resource-collection>
			<web-resource-name>SSL</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<!-- Authorization setting for SSL -->
		<auth-method>CLIENT-CERT</auth-method>
		<realm-name>Client Cert Users-only Area</realm-name>
	</login-config>
</web-app>